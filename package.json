{
  "name": "hyperapp-infinite-list",
  "description": "Infinite scroll list component for Hyperapp",
  "version": "0.1.1",
  "main": "dist/hyperapp-infinite-list.js",
  "module": "src/index.js",
  "license": "MIT",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "test": "jest",
    "tscheck": "jest -t 'tsx' --verbose",
    "cov": "jest --coverage",
    "format": "prettier --write {src,__tests__}/**/*.{js,jsx,tsx} index.d.ts && git add ."
  },
  "pre-commit": [
    "format"
  ],
  "typings": "index.d.ts",
  "dependencies": {},
  "peerDependencies": {
    "hyperapp": "^1.2.9"
  },
  "devDependencies": {
    "@hyperapp/render": "^2.1.0",
    "babel-eslint": "^10.0.1",
    "babel-plugin-rewire": "^1.2.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "cheerio": "^1.0.0-rc.2",
    "eslint": "^5.12.0",
    "eslint-plugin-react": "^7.12.3",
    "hyperapp": "^1.2.9",
    "jest": "^23.6.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.15.3",
    "rollup": "^1.0.1",
    "rollup-plugin-buble": "^0.19.6",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-uglify": "^6.0.0",
    "typescript": "^3.2.2"
  },
  "babel": {
    "presets": [
      "env"
    ],
    "plugins": [
      [
        "transform-react-jsx",
        {
          "pragma": "h"
        }
      ],
      "rewire"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended"
    ],
    "parser": "babel-eslint",
    "env": {
      "es6": true,
      "browser": true,
      "node": true,
      "jest": true
    },
    "ecmaFeatures": {
      "jsx": true
    },
    "plugins": [
      "react"
    ],
    "rules": {
      "react/jsx-uses-react": "error",
      "react/jsx-uses-vars": "error",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^h$"
        }
      ],
      "no-console": [
        "off"
      ]
    }
  },
  "prettier": {
    "printWidth": 100,
    "trailingComma": "none",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "arrowParens": "always"
  },
  "jest": {
    "verbose": false,
    "testEnvironment": "node",
    "testMatch": null,
    "testRegex": "/__tests__/.+(test|spec)\\.jsx?$",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ]
  },
  "repository": "ktty1220/hyperapp-infinite-list",
  "homepage": "https://github.com/ktty1220/hyperapp-infinite-list",
  "keywords": [
    "hyperapp",
    "infinite"
  ],
  "author": {
    "name": "ktty1220",
    "email": "ktty1220@gmail.com"
  },
  "readmeFilename": "README.md"
}
